<mvc:View
    controllerName="com.example.uiexperiment.controller.PostLogin"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page title="Wizard Example">
        <content>
            <Wizard
                id="id.postLoginWizard"
                renderMode="Page"
                finishButtonText="Finish"
                
            >
           <!-- We need to have atleast three WizardStep or the Wizard component is in unrendarable state which breaks **ALL** navigation. WTF  -->
           <!-- We can probably fix this by creating the Wizard also in JS, once we have the data. But yeah, Fuck UI5. -->

            <WizardStep />
            <WizardStep />
            <WizardStep />
            </Wizard>
        </content>
    </Page>
</mvc:View>